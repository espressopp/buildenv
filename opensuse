FROM opensuse/leap:latest
RUN zypper install -y gcc-c++ openmpi2-devel boost-devel libboost_filesystem-devel libboost_mpi-devel libboost_python-devel libboost_serialization-devel libboost_system-devel libboost_test1_66_0 libboost_test1_66_0-devel python-mpi4py-devel python-devel cmake ccache fftw3-devel hdf5 hdf5-devel gromacs-devel python-pip llvm-clang python2-h5py sudo

RUN groupadd -r wheel
RUN useradd -m -G wheel -U espressopp
RUN echo '%wheel ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers
USER espressopp
ENV PATH=/usr/lib64/ccache${PATH:+:}${PATH}
ENV LD_LIBRARY_PATH=/usr/lib64/mpi/gcc/openmpi/lib64:/usr/lib64/mpi/gcc/openmpi2/lib64${LD_LIBRARY_PATH:+:}${LD_LIBRARY_PATH}
WORKDIR /home/espressopp
RUN pip install --user codecov coverxygen
